#home.panorama
  .panorama-sections
    .row-fluid.row-break
      #items-section.actionSection.span6.panorama-section
        .row-fluid
          .span6
            .tile.palette-emerald(ng-click="commons.href('items')")
              .tile-sub
                span.enicon.whiteicon &#57349;
                h4 View Inventory
          .span6
            .tile.palette-sun-flower(ng-click="commons.href('items/add')")
              .tile-sub
                span.enicon.whiteicon &#10133;
                h4 Add Inventory
        .row-fluid.row-break
          .span4
            .tile.palette-pomegranate(ng-click="commons.href('items/list/low')")
              .tile-sub
                span.enicon.whiteicon &#128255;
                h4 {{itemsCount.low}}
                span Low Stock Items
          .span4
            .tile
              .tile-sub
                h4 {{itemsCount.count}}
                span total stock 
      #orders-section.actionSection.span6.panorama-section
        .row-fluid
          .span6
            .tile.palette-amethyst(ng-click="commons.href('dashboard/order')")
              .tile-sub
                span.enicon.whiteicon &#59197;
                h4 Place Order
          .span6
            .tile.palette-peter-river(ng-click="commons.href('orders')")
              .tile-sub
                span.enicon.whiteicon &#128200;
                h4 View Orders 
        .row-fluid.row-break
          .span4
            .tile.palette-turquoise(ng-click="commons.href('orders/pending')")
              .tile-sub  
                h4 {{ordersCount.pendingorders}}
                span pending orders
          .span4
            .tile.palette-turquoise(ng-click="commons.href('invoices/pending')")
              .tile-sub
                h4 {{ordersCount.pendingpayment}} 
                span pending payments                 
      #billing-section.actionSection.span6.panorama-section
        .row-fluid
          .span6
            .tile.palette-concrete(ng-click="commons.href('bills')")
              .tile-sub
                h4 Bills
        .row-fluid.row-break
          .span4
            .tile(ng-click="commons.href('items/list/low')")
              .tile-sub
                h4 N0.00
                span Amount today
          .span4
            .tile(ng-click="commons.href('orders/pending')")
              .tile-sub  
                h4 N0.00
                span amount unpaid
      #admin-section.actionSection.span6.panorama-section
        .row-fluid
          .span6
            .tile.palette-silver(ng-click="commons.href('items/dispensary')")
              .tile-sub
                h4 Dispensary 
          .span6
            .tile.palette-silver(ng-click="commons.href('items/locations')")
              .tile-sub
                h4 Stock Down Points 
        .row-fluid.row-break
          .span6
            .tile.palette-clouds(ng-click="commons.href('orders/new')")
              .tile-sub
                h4 Suppliers 

