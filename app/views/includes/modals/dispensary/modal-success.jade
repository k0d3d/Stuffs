#modal-1.md-modal.md-effect-1(ng-class="[modal.modalState, modal.class]")
  .md-content
      h3 {{modal.heading}}
      div
        p {{modal.body}}
        dl.dl-horizontal.this-patient
          dt Patient Name
          dd {{dispenseform.patientName}}
          dt Company
          dd {{dispenseform.company}}
          dt Patient Hospital Number
          dd {{dispenseform.patientno}}
        table.table
          thead
            tr
              th Drugs
              th Amount
              th Option
          tbody
            tr(ng-repeat="p in dispenseform.prescription")
              td {{p.itemName}}
              td {{p.amount}}
              td {{p.options}} 

        button.md-close(ng-click="modal.modalState = false") Close
        button(ng-click="sendDis()") Dispense List 